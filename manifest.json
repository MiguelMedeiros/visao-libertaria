{
  "manifest_version": 2,
  "name": "Visão Libertária",
  "author": "Miguel Medeiros",
  "short_name": "Visão Libertária",
  "description": "Extensão que te ajuda a ver a realidade por trás das notícias.",
  "version": "1.11.0",
  "icons": { "128": "./img/icon_128.png" },
  "background": {
    "scripts": ["./js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.globo.com/*",
        "*://*.yahoo.com/*",
        "*://*.ig.com.br/*",
        "*://*.terra.com.br/*",
        "*://*.uol.com.br/*",
        "*://*.r7.com/*",
        "*://*.oantagonista.com/*",
        "*://*.facebook.com/*",
        "*://*.instagram.com/*",
        "*://*.twitter.com/*",
        "*://*.abril.com.br/*",
        "*://*.google.com.br/*",
        "*://*.google.com/*",
        "*://*.youtube.com/*",
        "*://*.minds.com/*",
        "*://*.theintercept.com/*",
        "*://*.wikipedia.org/*",
        "*://*.reddit.com/*",
        "*://*.vk.com/*",
        "*://*.duckduckgo.com/*",
        "*://*.bing.com/*",
        "*://*.linkedin.com/*",
        "*://*.fazenda.gov.br/*",
        "*://*.correios.com.br/*",
        "*://*.reclameaqui.com.br/*",
        "*://*.gov.br/*",
        "*://*.com.br/*"
      ],
      "js": ["./js/app.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["activeTab", "tabs", "storage"],
  "browser_action": {
    "default_icon": "./img/icon.png",
    "default_popup": "popup.html"
  }
}
